{
    "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:jest/recommended"],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "quotes": [2, "single", { "avoidEscape": true }]
    }
}
